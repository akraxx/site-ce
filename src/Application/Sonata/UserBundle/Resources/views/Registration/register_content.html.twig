<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal" role="form">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Inscription</h3>
        </div>
        <div class="panel-body">

            <div class="text-danger">{{ form_errors(form) }}</div>
            <div class="form-group">
                <label for="{{ form.username.vars.id }}" class="col-sm-4 control-label">{{ form.username.vars.label|trans({}, 'FOSUserBundle') }}</label>
                <div class="col-sm-8">
                    <input type="text" required="required" name="{{ form.username.vars.full_name }}" class="form-control" id="{{ form.username.vars.id }}" placeholder="{{ form.username.vars.label|trans({}, 'FOSUserBundle') }}">
                </div>
            </div>
            <div class="text-danger">{{ form_errors(form.username) }}</div>
            <div class="form-group">
                <label for="{{ form.email.vars.id }}" class="col-sm-4 control-label">{{ form.email.vars.label|trans({}, 'FOSUserBundle') }}</label>
                <div class="col-sm-8">
                    <input type="email" required="required" name="{{ form.email.vars.full_name }}" class="form-control" id="{{ form.email.vars.id }}" placeholder="{{ form.email.vars.label|trans({}, 'FOSUserBundle') }}">
                </div>
            </div>
            <div class="text-danger">{{ form_errors(form.email) }}</div>
            <div class="form-group">
                <label for="{{ form.website.vars.id }}" class="col-sm-4 control-label">Service de rattachement</label>
                <div class="col-sm-8">
                    <input type="text" required="required" name="{{ form.website.vars.full_name }}" class="form-control" id="{{ form.website.vars.id }}" placeholder="Service de rattachement :">
                </div>
            </div>
            <div class="text-danger">{{ form_errors(form.website) }}</div>
            <div class="form-group">
                <label for="{{ form.plainPassword.first.vars.id }}" class="col-sm-4 control-label">{{ form.plainPassword.first.vars.label|trans({}, 'FOSUserBundle') }}</label>
                <div class="col-sm-8">
                    <input type="password" required="required" name="{{ form.plainPassword.first.vars.full_name }}" class="form-control" id="{{ form.plainPassword.first.vars.id }}" placeholder="{{ form.plainPassword.first.vars.label|trans({}, 'FOSUserBundle') }}">
                </div>
            </div>
            <div class="text-danger">{{ form_errors(form.plainPassword.first) }}</div>
            <div class="form-group">
                <label for="{{ form.plainPassword.second.vars.id }}" class="col-sm-4 control-label">{{ form.plainPassword.second.vars.label|trans({}, 'FOSUserBundle') }}</label>
                <div class="col-sm-8">
                    <input type="password" required="required" name="{{ form.plainPassword.second.vars.full_name }}" class="form-control" id="{{ form.plainPassword.second.vars.id }}" placeholder="{{ form.plainPassword.second.vars.label|trans({}, 'FOSUserBundle') }}">
                </div>
            </div>
            <div class="text-danger">{{ form_errors(form.plainPassword.second) }}</div> 
            <input type="hidden" name="{{ form._token.vars.full_name }}" class="form-control" id="{{ form._token.vars.id }}" value="{{ form._token.vars.value }}">
        </div>
        <div class="panel-footer">
            <div class="form-group">
                <div class="col-sm-offset-4">
                    <input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
</form>

