<form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="form-horizontal" role="form">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Nouveau mot de passe</h3>
        </div>
        <div class="panel-body">

            <div class="text-danger">{{ form_errors(form) }}</div>
            <div class="form-group">
                <label for="{{ form.new.first.vars.id }}" class="col-sm-4 control-label">{{ form.new.first.vars.label|trans({}, 'FOSUserBundle') }}</label>
                <div class="col-sm-8">
                    <input type="password" required="required" name="{{ form.new.first.vars.full_name }}" class="form-control" id="{{ form.new.first.vars.id }}" placeholder="{{ form.new.first.vars.label|trans({}, 'FOSUserBundle') }}">
                </div>
            </div>
            <div class="text-danger">{{ form_errors(form.new.first) }}</div>
            <div class="form-group">
                <label for="{{ form.new.second.vars.id }}" class="col-sm-4 control-label">{{ form.new.second.vars.label|trans({}, 'FOSUserBundle') }}</label>
                <div class="col-sm-8">
                    <input type="password" required="required" name="{{ form.new.second.vars.full_name }}" class="form-control" id="{{ form.new.second.vars.id }}" placeholder="{{ form.new.second.vars.label|trans({}, 'FOSUserBundle') }}">
                </div>
            </div>
            <div class="text-danger">{{ form_errors(form.new.second) }}</div> 
            <input type="hidden" name="{{ form._token.vars.full_name }}" class="form-control" id="{{ form._token.vars.id }}" value="{{ form._token.vars.value }}">
        </div>
        <div class="panel-footer">
            <div class="form-group">
                <div class="col-sm-offset-4">
                    <input type="submit" value="{{ 'resetting.reset.submit'|trans({}, 'FOSUserBundle') }}" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
</form>