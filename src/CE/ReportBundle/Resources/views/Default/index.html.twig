{% extends "::base.html.twig" %}

{% block title %} - PVs{% endblock %} 
{% set active_page = 'Rapports' %}
{% block reports_active %}active{% endblock %}
{% block body %}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Liste des PVs</h3>
            </div>
            <div class="panel-body">
                {% for report in reports %}
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            <h3 class="panel-title">{{ report.title }} <span class="pull-right">Date de la réunion : {{ report.meetingDate|date('d-M-y') }}</span></h3>
                        </div>
                        <div class="panel-body">{{ report.description }}</div>

                        <div class="panel-footer"><a href="{{ path('sonata_media_download', {'id': report.file|sonata_urlsafeid }) }}" >Télécharger la pièce jointe.</a><span class="pull-right">Date d'enregistrement de l'élément : {{ report.date|date('d-M-y H:i') }}</span></div>
                    </div>
                {% endfor %}
                </div>
                <div class="panel-footer text-center">
                    {% include '::pagination.html.twig' with {'id': id, 'url': 'ce_report_pagination', 'nb_pages': nb_pages} only %}
                </div>
            </div>
        </div>
</div>
{% endblock body %}
